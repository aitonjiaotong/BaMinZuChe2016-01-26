<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/account_log_bg_default"
                tools:context="com.aiton.bamin.shenzhouzuche2016_1_26.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="42dp"
            android:scaleType="fitXY"
            android:src="@mipmap/login_logo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:id="@+id/tv_personal_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="0.5dp"
                android:layout_weight="1"
                android:background="@mipmap/tab_left_checked"
                android:gravity="center"
                android:padding="12dp"
                android:text="个人登录"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white"/>

            <TextView
                android:id="@+id/tv_enterprise_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0.5dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:background="@mipmap/tab_right_nor"
                android:gravity="center"
                android:padding="12dp"
                android:text="政企登录"
                android:textColor="@color/white"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/account_login_number"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:padding="12dp"
                android:text="账号"
                android:textColor="@color/gray"/>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:background="@color/white"/>

            <EditText
                android:id="@+id/et_account_login_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00000000"
                android:hint="请输入手机号"
                android:padding="12dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/account_login_password"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:padding="12dp"
                android:text="密码"
                android:textColor="@color/gray"/>

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:background="@color/white"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00000000"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="12sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/login_btn_selector"
            android:gravity="center"
            android:padding="12dp"
            android:text="登录"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:padding="12dp"
                android:text="注册个人会员"
                android:textColor="@color/actionbar_color"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:padding="12dp"
                android:text="忘记密码?"
                android:textColor="@color/white"/>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
