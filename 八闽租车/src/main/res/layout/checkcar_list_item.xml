<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageView
            android:layout_weight="3"
            android:src="@mipmap/check_normal01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/carImg"/>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_weight="1.3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="15dp">

                    <TextView
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="起亚K2"
                        android:textColor="#000000"
                        android:id="@+id/carName"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="三厢|1.4自动|乘坐五人"
                        android:id="@+id/textView38"
                        android:layout_below="@+id/carName"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"/>
                </RelativeLayout>

                <ImageView
                    android:src="@mipmap/base_cridetcard_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView21"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="13dp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:background="@color/line_color"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width">
            </LinearLayout>

            <RelativeLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:src="@mipmap/shortlease_hui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView22"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="11dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="千元新年礼包狂送"
                    android:id="@+id/textView39"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imageView22"
                    android:layout_toEndOf="@+id/imageView22"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:background="@color/line_color"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_width"/>

            <RelativeLayout
                android:layout_weight="1.8"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="@color/blue_base"
                    android:id="@+id/textView40"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="11dp"/>

                <TextView
                    android:textColor="@color/blue_base"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="132"
                    android:textSize="18sp"
                    android:id="@+id/carPrice"
                    android:layout_alignBottom="@+id/textView40"
                    android:layout_toRightOf="@+id/textView40"
                    android:layout_toEndOf="@+id/textView40"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/天"
                    android:id="@+id/textView42"
                    android:layout_alignBottom="@+id/textView40"
                    android:layout_toRightOf="@+id/carPrice"
                    android:layout_toEndOf="@+id/carPrice"/>

                <ImageView
                    android:src="@mipmap/base_gray_arrow_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView23"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="9dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="每日租金"
                    android:id="@+id/textView43"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/imageView23"
                    android:layout_toStartOf="@+id/imageView23"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="8dp"/>

                <ImageView
                    android:src="@mipmap/calender_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView24"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/textView43"
                    android:layout_toStartOf="@+id/textView43"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="12dp"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>